<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@drawable/date_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_dele"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/dele"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <TextView
            android:id="@+id/tv_money"
            android:layout_marginTop="26dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="#333333"
            android:text="100约豆"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_ts"
            android:textSize="16sp"
            android:layout_below="@+id/tv_money"
            android:gravity="center_horizontal"
            android:text="发起约会可选择自己支付或对方支付！"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/lin_xz"
            android:gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/tv_ts"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:textColor="#000000"
                android:layout_weight="1"
                android:id="@+id/tv_zj"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:background="@drawable/shape_date_refuse_button"
                android:gravity="center"
                android:text="自己支付"
                android:textSize="14sp"
                />

            <TextView
                android:textColor="#ffffff"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:id="@+id/tv_df"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_bg_date_accept_btn"
                android:gravity="center"
                android:text="对方支付"
                android:textSize="14sp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_suer_pay"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="26dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:background="@drawable/date_suer_btn_bg"
            android:layout_below="@+id/lin_xz"
            android:gravity="center"
            android:text="确认"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    </RelativeLayout>
</LinearLayout>