<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp">

        <TextView
            style="@style/actor_menu"
            android:layout_marginTop="0dp"
            android:text="认证"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/corner_solid_gray"
                    android:drawableLeft="@drawable/selector_actor_verify_identity"
                    android:drawablePadding="5dp"
                    android:paddingLeft="9dp"
                    android:paddingTop="6dp"
                    android:paddingRight="9dp"
                    android:paddingBottom="6dp"
                    android:text="身份认证"
                    android:textColor="@color/black_333333"
                    android:textSize="12sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/corner_solid_gray"
                    android:drawableLeft="@drawable/selector_actor_verify_phone"
                    android:drawablePadding="5dp"
                    android:paddingLeft="9dp"
                    android:paddingTop="6dp"
                    android:paddingRight="9dp"
                    android:paddingBottom="6dp"
                    android:text="手机认证"
                    android:textColor="@color/black_333333"
                    android:textSize="12sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/corner_solid_gray"
                    android:drawableLeft="@drawable/selector_actor_verify_video"
                    android:drawablePadding="5dp"
                    android:paddingLeft="9dp"
                    android:paddingTop="6dp"
                    android:paddingRight="9dp"
                    android:paddingBottom="6dp"
                    android:text="视频认证"
                    android:textColor="@color/black_333333"
                    android:textSize="12sp" />
            </FrameLayout>

        </LinearLayout>

        <TextView
            style="@style/actor_menu"
            android:layout_marginTop="0dp"
            android:text="联系方式"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/contact_wx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:alpha="0.3"
                    android:background="@drawable/bg_actor_look_wx"
                    android:drawableLeft="@drawable/actor_look_wx"
                    android:drawablePadding="10dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="6dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="6dp"
                    android:text="微信"
                    android:textColor="#3cce88"
                    android:textSize="14sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/contact_qq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:alpha="0.3"
                    android:background="@drawable/bg_actor_look_qq"
                    android:drawableLeft="@drawable/actor_look_qq"
                    android:drawablePadding="10dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="6dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="6dp"
                    android:text="QQ"
                    android:textColor="#ebb629"
                    android:textSize="14sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/contact_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:alpha="0.3"
                    android:background="@drawable/bg_actor_look_phone"
                    android:drawableLeft="@drawable/actor_look_phone"
                    android:drawablePadding="6dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="6dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="6dp"
                    android:text="手机"
                    android:textColor="#fe9fc4"
                    android:textSize="14sp" />
            </FrameLayout>

        </LinearLayout>

        <TextView
            style="@style/actor_menu"
            android:text="TA的资料" />

        <com.zhy.view.flowlayout.TagFlowLayout
            android:id="@+id/flow_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
        <!--微信号-->
        <RelativeLayout
            android:id="@+id/we_chat_rl"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_info_text_one_back"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:visibility="gone">

            <!--微信号-->
            <TextView
                android:id="@+id/we_chat_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/black_333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/see_wechat_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical"
                android:text="查看微信"
                android:textColor="@color/red_ff7689"
                android:textSize="14sp"
                android:visibility="visible"
                tools:ignore="RelativeOverlap"
                />

        </RelativeLayout>

        <!--手机号-->
        <RelativeLayout
            android:id="@+id/phone_rl"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_info_text_one_back"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:visibility="gone">

            <!--手机号-->
            <TextView
                android:id="@+id/phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/black_333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/see_phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical"
                android:text="查看手机"
                android:textColor="@color/red_ff7689"
                android:textSize="14sp"
                android:visibility="visible"
                tools:ignore="RelativeOverlap" />

        </RelativeLayout>
        <TextView
            style="@style/actor_menu"
            android:text="TA的守护" />

        <LinearLayout
            android:id="@+id/protect_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.lovechatapp.chat.view.recycle.NoTouchRecycleView
                android:id="@+id/protect_rv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/person_arrow" />

        </LinearLayout>

        <TextView
            style="@style/actor_menu"
            android:text="个人动态" />

        <LinearLayout
            android:id="@+id/dynamic_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.lovechatapp.chat.view.recycle.NoTouchRecycleView
                android:id="@+id/dynamic_rv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:src="@drawable/person_arrow" />

        </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_user"
        style="@style/actor_menu"
        android:text="用户印象" />

    <LinearLayout
        android:layout_below="@+id/tv_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.lovechatapp.chat.view.StarView
            android:id="@+id/star_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/score_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="0"
            android:textColor="#ff333333"
            android:textSize="14sp" />

    </LinearLayout>
    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/rl_resber"
        android:layout_alignParentRight="true"
        android:background="@drawable/person_info_fabu_bg"
        android:layout_width="60dp"
        android:layout_height="60dp">
       <LinearLayout
           android:layout_centerVertical="true"
           android:layout_centerHorizontal="true"
           android:orientation="vertical"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <ImageView
               android:src="@drawable/video_chat_video"
               android:layout_width="match_parent"
               android:layout_height="20dp"/>
           <TextView
               android:gravity="center_horizontal"
               android:textColor="#ffffff"
               android:text="视频"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
       </LinearLayout>

    </RelativeLayout>

</RelativeLayout>


        <LinearLayout
            android:id="@+id/comment_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
