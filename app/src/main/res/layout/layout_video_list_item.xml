    android:layout_marginLeft="10dp"
    android:layout_width="110dp"
    android:layout_height="150dp">
<ImageView
    android:id="@+id/imge_imag"
    android:scaleType="fitXY"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>
