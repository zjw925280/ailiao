<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.lovechatapp.chat.view.banner.HorizontalBanner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_marginLeft="@dimen/item_space"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/item_space" />

        <com.lovechatapp.chat.view.banner.BannerIndicator
            android:id="@+id/indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="6dp"
            app:indicatorDrawableRes="@drawable/selector_indicator"
            app:indicatorMargin="5dp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_space"
        android:layout_marginTop="@dimen/item_space"
        android:layout_marginRight="@dimen/item_space"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/left_iv"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/right_iv"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginStart="@dimen/item_space"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>