<?xml version="1.0" encoding="utf-8"?>
<com.lovechatapp.chat.view.Square4_3FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="2dp"
    android:layout_marginTop="2dp"
    android:background="#f1f1f1">

    <ImageView
        android:id="@+id/content_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/lock_iv"
        android:layout_width="12dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="7dp"
        android:src="@drawable/actor_album_lock" />

    <ImageView
        android:id="@+id/play_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/actor_play_btn" />

</com.lovechatapp.chat.view.Square4_3FrameLayout>