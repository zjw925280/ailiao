<?xml version="1.0" encoding="utf-8"?>
<com.lovechatapp.chat.view.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="8dp">

    <ImageView
        android:id="@+id/content_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/lock_iv"
        android:layout_width="12dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="3dp"
        android:adjustViewBounds="true"
        android:src="@drawable/actor_album_lock" />

    <ImageView
        android:id="@+id/video_play_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/person_play" />

</com.lovechatapp.chat.view.SquareFrameLayout>